    <TextView
        android:id="@+id/walkingPace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/walkingDis"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/runningPace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/walkingPace"
        android:layout_alignStart="@+id/runningDis"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/runningDis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/runorwalk"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="304dp"
        android:layout_marginStart="304dp"
        android:layout_marginTop="48dp"
        android:textColor="@color/oldsilver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RUN" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="315dp"
        tools:layout_editor_absoluteY="165dp" />

    <Button
        android:id="@+id/stop"
        style="@style/btn2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="@string/end_run"
        android:visibility="gone"
        tools:layout_editor_absoluteX="411dp"
        tools:layout_editor_absoluteY="602dp" />

    <com.rey.material.widget.Button
        android:id="@+id/start"
        style="@style/btn2"
        android:layout_width="304dp"
        android:layout_height="0dp"

        android:onClick="broadcastIntent"
        android:text="@string/record_run"
        android:visibility="invisible"
        app:rd_enable="true"
        app:rd_style="@style/YourRippleDrawableStyle"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="602dp" />

    <com.rey.material.widget.Button
        android:id="@+id/button4"
        style="@style/YourRippleDrawableStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUTTON"
        android:visibility="gone"
        app:rd_enable="true"
        tools:layout_editor_absoluteX="167dp" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mapView"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="410dp"
        android:layout_height="169dp"
        android:visibility="visible"
        tools:context="com.example.mapwithmarker.MapsMarkerActivity"
        tools:layout="?android:attr/preferenceLayoutChild" />

    <Button
        android:id="@+id/save"
        style="@style/btn2"
        android:layout_width="280dp"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/switches"
        android:layout_marginBottom="56dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:onClick="goToSummaryPage"
        android:text="@string/save_run"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txt_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="true"
        android:textColor="@color/grey"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="357dp" />

    <TextView
        android:id="@+id/txt_confidence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="true"
        android:textSize="10sp"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="287dp"
        tools:layout_editor_absoluteY="357dp" />

    <Spinner
        android:id="@+id/mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey"
        android:visibility="gone"
        tools:layout_editor_absoluteX="357dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/WALK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pace"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="224dp"
        android:layout_toEndOf="@+id/mode"
        android:text="@string/walk_run"
        android:textColor="@color/oldsilver"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/RUN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pace"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="224dp"
        android:layout_toEndOf="@+id/mode"
        android:text="@string/run_run"
        android:textColor="@color/oldsilver"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/navigation_drawer_open"
        android:visibility="gone">

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="visible"
        app:itemIconTint="@color/colorPrimary"
        app:itemTextColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation2" />

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        android:layout_marginTop="248dp"
        android:textColor="@color/oldsilver"
        app:layout_constraintEnd_toStartOf="@+id/RUN"
        app:layout_constraintTop_toTopOf="@+id/mapView" />

    <com.github.angads25.toggle.LabeledSwitch
        android:id="@+id/switches"
        android:layout_width="140dp"
        android:layout_height="39dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/start"
        android:layout_marginBottom="280dp"
        android:layout_marginEnd="124dp"
        android:layout_marginRight="124dp"
        android:textSize="14sp"
        app:colorBorder="@color/colorPrimary"
        app:colorOff="@color/white"
        app:colorOn="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:on="false"
        app:textOff="@string/pause_run"
        app:textOn="@string/record_run" />
</android.support.constraint.ConstraintLayout>